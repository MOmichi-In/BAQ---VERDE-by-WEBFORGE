---
// src/components/ambiental_cards/ambiental_card.astro

const { title, category, slug } = Astro.props;
---

<div class="card-container">
  <div class="card">
    <div class="card-header">
      <h3 class="card-title">{title}</h3>
    </div>
    <button
      class="btn"
      onclick={`window.location.href='/ICAU/${slug}'`}
      aria-label={`Ver más sobre ${title}`}
    >
      Ver más
    </button>
    <img src="/images/svg/arbol_1.svg" class="tree-left" alt="Árbol izquierdo" />
    <img src="/images/svg/arbol_2.svg" class="tree-right" alt="Árbol derecho" />
  </div>
</div>

<style>
  .card-container {
    display: flex;
    justify-content: center;
    align-items: stretch;
    width: 100%;
    margin: var(--spacing-lg) auto;
    padding: var(--spacing-md);
  }

  .card {
    background: var(--bv-blanco);
    border-radius: var(--border-radius-lg);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
    padding: 1.5rem 2rem;
    text-align: center;
    width: 280px;
    min-height: 220px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    position: relative;
    overflow: visible;
    height: auto;
  }

  .card-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-sm);
  }

  .card-category {
    background-color: var(--bv-verde-claro);
    color: var(--bv-verde-secundario-dark);
    font-size: 0.75rem;
    font-weight: bold;
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .card-title {
    color: var(--bv-verde-secundario-dark);
    font-size: 1.1rem;
    margin: 0;
    font-weight: 600;
    line-height: 1.3;
    font-family: var(--font-family-heading);
    word-break: break-word;
    white-space: normal;
  }

  .btn {
    background-color: var(--bv-amarillo);
    color: var(--bv-azul-oscuro);
    border: none;
    border-radius: var(--border-radius-md);
    padding: 0.625rem 1.25rem;
    font-size: 0.9rem;
    font-weight: 500;
    font-family: var(--font-family-base);
    cursor: pointer;
    transition: all 0.2s ease;
    white-space: nowrap;
  }

  .btn:hover {
    background-color: #ffc107;
    transform: translateY(-1px);
  }

  .tree-left,
  .tree-right {
    position: absolute;
    top: -90px;
    z-index: 10;
  }

  .tree-left {
    right: -21px;
    width: 70px;
  }

  .tree-right {
    right: 10px;
    width: 55px;
  }

  @media (max-width: 768px) {
    .card {
      width: 250px;
      padding: 1.25rem 1.5rem;
      min-height: 210px;
    }

    .card-title {
      font-size: 1rem;
    }

    .tree-left {
      width: 60px;
      top: -60px;
      right: -15px;
    }

    .tree-right {
      width: 45px;
      top: -50px;
      right: 20px;
    }
  }
</style>