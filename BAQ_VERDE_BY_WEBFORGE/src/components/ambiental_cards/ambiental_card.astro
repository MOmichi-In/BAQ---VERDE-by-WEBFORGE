---
const { title } = Astro.props;
---

<div class="card-container">
  <!-- Tarjeta principal -->
  <div class="card">
    <h3>{title}</h3>
    <button class="btn">Ver más</button>
    
    <img src="/images/svg/arbol_1.svg" class="tree-left" alt="Árbol izquierdo" />
    <img src="/images/svg/arbol_2.svg" class="tree-right" alt="Árbol derecho" />
  </div>
</div>

<style>
  .card-container {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    margin: 2rem auto;
    padding: 1rem;
  }

  .card {
    background: white;
    border-radius: 16px;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
    padding: 1.5rem 2rem;
    text-align: center;
    width: 280px;
    position: relative;
    overflow: visible;
  }

  .card h3 {
    color: #2d5a2d;
    font-size: 1.25rem;
    margin: 0 0 1rem 0;
    font-weight: 600;
    line-height: 1.3;
  }

  .btn {
    background-color: #FFD54F;
    color: #2d5a2d;
    border: none;
    border-radius: 8px;
    padding: 0.625rem 1.25rem;
    font-size: 0.9rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .btn:hover {
    background-color: #FFC107;
    transform: translateY(-1px);
  }

  /* Árboles pegados a la tarjeta - MÁS ARRIBA */
  .tree-left {
    position: absolute;
    top: -93px;    /* Más arriba */
    right: -21px;
    width: 70px;
    height: auto;
    z-index: 10;
  }

  .tree-right {
    position: absolute;
    top: -86px;    /* Más arriba */
    right: 10px;
    width: 55px;
    height: auto;
    z-index: 11;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .card {
      width: 250px;
      padding: 1.25rem 1.5rem;
    }
    
    .card h3 {
      font-size: 1.1rem;
    }
    
    .tree-left {
      width: 60px;
      top: -10px;
      right: -15px;
    }
    
    .tree-right {
      width: 45px;
      top: -15px;
      right: -30px;
    }
  }
</style>