---
import 'leaflet/dist/leaflet.css';
---

<div id="map" class="map-container" />

<style>
  .map-container {
    height: 400px;
    width: 100%;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  }
</style>

<script>
  // Cargar Leaflet solo en el cliente
  import("https://unpkg.com/leaflet@1.9.4/dist/leaflet.js").then((L) => {
    // Crear el mapa
    const map = L.map('map').setView([20.659698, -103.349609], 13); // Coordenadas de ejemplo: Guadalajara, México

    // Capa de OpenStreetMap
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
    }).addTo(map);

    // Opcional: añadir un marcador
    L.marker([20.659698, -103.349609]).addTo(map)
      .bindPopup('¡Hola desde OpenStreetMap!')
      .openPopup();
  });

  // Cargar estilos de Leaflet
  const link = document.createElement('link');
  link.rel = 'stylesheet';
  link.href = 'https://unpkg.com/leaflet@1.9.4/dist/leaflet.css';
  document.head.appendChild(link);
</script>