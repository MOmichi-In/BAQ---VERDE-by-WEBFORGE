---
import Layout from "../../layouts/Layout.astro";
import { newsData } from "../../lib/news_data.js";

// Generar rutas estÃ¡ticas para cada noticia
export async function getStaticPaths() {
  return newsData.map((item) => ({
    params: { id: item.id.toString() },
    props: { noticia: item },
  }));
}

const { noticia } = Astro.props;
---

<Layout title="Ãšltimas Noticias">
  <section class="news-detail">
    
    <!-- Imagen destacada a pantalla grande -->
    <div class="news-hero">
      <img src={noticia.image} alt={noticia.title} class="news-image"/>
    </div>

    <!-- Contenido -->
    <div class="news-content">
      <h1 class="news-title">{noticia.title}</h1>
      <div class="title-underline"></div>

      <p class="news-description">{noticia.description}</p>

      <div class="news-text">
        <p>{noticia.text}</p>
      </div>

      <p class="news-date">ðŸ“… {noticia.date}</p>

      <a href="/news" class="back-link">â¬… Volver a noticias</a>
    </div>
  </section>
</Layout>

<style>
.news-detail {
  max-width: 1100px;
  margin: 0 auto;
  padding: 2rem 1rem;
}

.news-hero {
  width: 100%;
  height: 60vh; /* ocupa gran parte de la pantalla */
  overflow: hidden;
  border-radius: 12px;
  margin-bottom: 2rem;
}

.news-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.news-content {
  text-align: left;
}

.news-title {
  font-size: 3rem;
  font-weight: bold;
  color: #222;
  margin-bottom: 0.5rem;
}

.title-underline {
  width: 100px;
  height: 4px;
  background-color: #2ecc71;
  margin: 0 0 2rem 0;
  border-radius: 2px;
}

.news-description {
  font-size: 1.5rem;
  font-weight: 500;
  color: #333;
  margin-bottom: 1.5rem;
}

.news-text {
  font-size: 1.2rem;
  line-height: 1.8;
  color: #444;
  margin-bottom: 2rem;
  text-align: justify;
}

.news-date {
  font-size: 1rem;
  color: #777;
  margin-bottom: 2rem;
}

.back-link {
  display: inline-block;
  text-decoration: none;
  background-color: #2ecc71;
  color: white;
  padding: 0.6rem 1.2rem;
  border-radius: 5px;
  transition: background 0.3s;
}
.back-link:hover {
  background-color: #27ae60;
}
</style>
