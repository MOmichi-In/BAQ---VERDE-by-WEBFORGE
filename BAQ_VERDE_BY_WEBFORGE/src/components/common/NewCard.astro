---
const { title, image, description, text, href } = Astro.props;
import "../../styles/common/cards.css";
---

<div class="card">
  <div class="card-header">
    <h3>{title}</h3>
  </div>

  <img src={image} alt={title} class="card-image" />

  <div class="card-content">
    <p class="card-description">{ description }</p>
    <p class="card-text">{ text }</p>
  </div>

  <a href="{href}" class="card-buttom">Ver m√°s</a>
</div>

<style>

.card {
  height: 80vh;
}

.card-content {
  flex: 1;
  padding: 12px;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  margin-top: 1.3rem;
}

.card-description {
  font-weight: bold;
  margin: 0 0 8px;
  color: #333;
  font-size: 25px;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.card-text {
  color: #666;
  margin: 0;
  font-size: 20px;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

@media (max-width: 900px) {
  .card {
    height: 50vh;
  }
}

@media (max-width: 600px) {
  .card {
    height: auto;
  }
}

</style>