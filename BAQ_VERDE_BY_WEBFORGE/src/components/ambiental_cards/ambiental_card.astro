---
const { title, description } = Astro.props;
---
<div class="card-container">
  <div class="card">
    <h3>{title}</h3>
    <button class="btn" data-title={title} data-description={description}>
      Ver más
    </button>
    <img src="/images/svg/arbol_1.svg" class="tree-left" alt="Árbol izquierdo" />
    <img src="/images/svg/arbol_2.svg" class="tree-right" alt="Árbol derecho" />
  </div>
</div>

<style>
/* (tu CSS actual permanece igual) */
.card-container {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  margin: var(--spacing-lg) auto;
  padding: var(--spacing-md);
}

.card {
  background: var(--bv-blanco);
  border-radius: var(--border-radius-lg);
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
  padding: 1.5rem 2rem;
  text-align: center;
  width: 280px;
  position: relative;
  overflow: visible;
}

.card h3 {
  color: var(--bv-verde-secundario-dark);
  font-size: 1.25rem;
  margin: 0 0 var(--spacing-md) 0;
  font-weight: 600;
  line-height: 1.3;
  font-family: var(--font-family-heading);
}

.btn {
  background-color: var(--bv-amarillo);
  color: var(--bv-verde-sec-dark);
  border: none;
  border-radius: var(--border-radius-md);
  padding: 0.625rem 1.25rem;
  font-size: 0.9rem;
  font-weight: 500;
  font-family: var(--font-family-base);
  cursor: pointer;
  transition: all 0.2s ease;
}

.btn:hover {
  background-color: #FFC107;
  transform: translateY(-1px);
}

.tree-left {
  position: absolute;
  top: -93px;
  right: -21px;
  width: 70px;
  height: auto;
  z-index: 10;
}

.tree-right {
  position: absolute;
  top: -86px;
  right: 10px;
  width: 55px;
  height: auto;
  z-index: 11;
}

@media (max-width: 768px) {
  .card {
    width: 250px;
    padding: 1.25rem 1.5rem;
  }
  
  .card h3 {
    font-size: 1.1rem;
  }
  
  .tree-left {
    width: 60px;
    top: -10px;
    right: -15px;
  }
  
  .tree-right {
    width: 45px;
    top: -15px;
    right: -30px;
  }
}
</style>