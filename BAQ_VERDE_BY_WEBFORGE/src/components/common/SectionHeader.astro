---
const { title, subtitle } = Astro.props;
---

<div class="section-header">
  <h2>{ title }</h2>
  <p>{ subtitle }</p>
</div>

<style>
.section-header {
  background-color: rgba(192, 193, 193, 0.583);
  padding: var(--spacing-lg) var(--spacing-md);
  text-align: center;
  margin-bottom: var(--spacing-lg);
  border-radius: var(--border-radius-sm);
}

.section-header h2 {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--bv-azul-oscuro);
  margin: 0;
  line-height: 1.3;
}

.section-header p {
  color: var(--bv-gris);
  font-size: 1rem;
  margin-top: var(--spacing-sm);
  max-width: 800px;
  margin-left: auto;
  margin-right: auto;
  line-height: 1.5;
}
</style>
