        margin-bottom: 30px;
      }

      .logout-btn {
        padding: 12px 24px;
        background-color: var(--secondary-yellow);
        color: var(--primary-green);
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-size: 1rem;
        font-weight: bold;
        transition: all 0.3s ease;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      }

      .logout-btn:hover {
        background-color: #e6b800;
        transform: translateY(-2px);
      }

      .logout-btn:active {
        transform: translateY(0);
      }
    </style>
