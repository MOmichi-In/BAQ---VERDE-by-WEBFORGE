---
export const prerender = false;

import Layout from "../layouts/Layout.astro";
import SectionHeader from "../components/common/SectionHeader.astro";
import NewsList from "../components/notice_sections/NewsList.astro";
---

<Layout title="Noticias">
  <!-- Comunicados -->
  <SectionHeader
    title="Comunicados"
    subtitle="Mantente informado con los comunicados oficiales de nuestro laboratorio, donde compartimos alertas ambientales, novedades y actualizaciones importantes para la comunidad"
  />
  <NewsList category="Comunicados" />

  <!-- Alertas Ambientales -->
  <SectionHeader
    title="Alertas Ambientales"
    subtitle="Informamos oportunamente sobre riesgos y eventos ambientales que pueden afectar la salud pública y los ecosistemas, con el fin de promover la prevención y la acción responsable."
  />
  <NewsList category="Alertas" />
</Layout>