---
const text = 'El Observatorio Ambiental es una plataforma para el monitoreo, análisis y difusión de información ambiental. Nuestro objetivo es brindar datos confiables para la toma de decisiones y la concientización ciudadana.';
---

<section class="banner-about">
  <div class="container">
    <div class="content">
      <p>{text}</p>
    </div>
  </div>
  
  <!-- SVGs decorativos -->
  <img src="/images/svg/tucan.svg" class="toucan" alt="Tucán" />
  <img src="/images/svg/leon.svg" class="chameleon" alt="Camaleón" />
  <img src="/images/svg/plantas.svg" class="leaves-left" alt="Hojas izquierda" />
  <img src="/images/svg/plantas_2.svg" class="leaves-right" alt="Hojas derecha" />
</section>

<style>
  /* Estilos locales solo para este componente */
.banner-about {
  position: relative;
  padding: 4rem 0;
  background-color: #ffffff;
  min-height: 400px;
  overflow: hidden;
}

.banner-about .container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1rem;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  z-index: 10;
  height: 100%;
}

.banner-about .content {
  text-align: center;
  color: #2e7d32;
  font-size: 1.2rem;
  line-height: 1.6;
  max-width: 700px;
  margin: 0 auto;
  padding: 2rem 1rem;
  z-index: 2;
  font-weight: 500;
}

.banner-about p {
  margin: 0;
}

.banner-about img {
  position: absolute;
  z-index: 1;
  pointer-events: none;
}

/* TUCÁN - Superior izquierda */
.banner-about .toucan {
  top: 0;
  left: 5%; 
  width: 300px;
  height: auto;
  transform: rotate(0deg);
}

/* CAMALEÓN - Superior derecha */
.banner-about .chameleon {
  top: 8%;
  right: 5%; 
  width: 350px;
  height: auto;
  transform: rotate(-5deg);
}

/* HOJAS IZQUIERDA - Inferior izquierda */
.banner-about .leaves-left {
  bottom: -1%;
  left: 5%; 
  width: 300px;
  height: auto;
  transform: rotate(-3deg);
}

/* HOJAS DERECHA - Al lado del camaleón */
.banner-about .leaves-right {
  bottom: -5%;
  right: 5%; 
  width: 250px;
  height: auto;
  transform: rotate(3deg);
}

/* Responsive Design */
@media (max-width: 1024px) {
  .banner-about .toucan {
    width: 130px;
    top: 8%;
    left: 3%;
  }

  .banner-about .chameleon {
    width: 140px;
    top: 6%;
    right: 3%;
  }

  .banner-about .leaves-left {
    width: 100px;
    bottom: 6%;
    left: 2%;
  }

  .banner-about .leaves-right {
    width: 110px;
    bottom: 4%;
    right: 2%;
  }
}

@media (max-width: 768px) {
  .banner-about {
    padding: 3rem 0;
    min-height: 300px;
  }

  .banner-about .content {
    font-size: 1.1rem;
    max-width: 90%;
    padding: 1.5rem 1rem;
  }

  .banner-about .toucan {
    width: 100px;
    top: 5%;
    left: 2%;
  }

  .banner-about .chameleon {
    width: 110px;
    top: 3%;
    right: 2%;
  }

  .banner-about .leaves-left {
    width: 80px;
    bottom: 4%;
    left: 1%;
  }

  .banner-about .leaves-right {
    width: 90px;
    bottom: 2%;
    right: 1%;
  }
}

@media (max-width: 480px) {
  .banner-about {
    padding: 2rem 0;
    min-height: 250px;
  }

  .banner-about .content {
    font-size: 1rem;
    padding: 1rem;
  }

  .banner-about .leaves-left,
  .banner-about .leaves-right {
    opacity: 0.6;
  }
}
</style>