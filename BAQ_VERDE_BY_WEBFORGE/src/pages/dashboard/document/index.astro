---
import Layout from '../../../layouts/DashboardLayout.astro';

const cookieStore = Astro.cookies;
const sessionToken = cookieStore.get('token')?.value;

if (!sessionToken) {
  return Astro.redirect('/login');
}

if (Astro.url.searchParams.get('logout') === 'true') {
  Astro.cookies.delete('token', { path: '/' });
  return Astro.redirect('/login');
}

// Obtener documentos
const docsRes = await fetch(`${Astro.url.origin}/api/admin/documentos`);
const documentos = await docsRes.json();
---

<Layout title="Gesti√≥n de Documentos">
  <div class="container">
    <div class="header">
      <h1>üìÅ Gesti√≥n de Documentos</h1>
      <a href="/dashboard/documentos/subir" class="btn-primary">+ Subir Documento</a>
    </div>

    <div class="docs-grid">
      {documentos.map((doc) => (
        <div class="doc-card">
          <h3>{doc.title}</h3>
          <p>Tama√±o: {(doc.size / 1024 / 1024).toFixed(2)} MB</p>
          <p>Subido: {new Date(doc.uploadedAt).toLocaleDateString()}</p>
          <div class="actions">
            <a href={doc.url} target="_blank" class="btn-view">üëÅÔ∏è Ver</a>
            <button class="btn-delete" data-id={doc.id} data-url={doc.url}>üóëÔ∏è Eliminar</button>
          </div>
        </div>
      ))}
    </div>
  </div>

  <style>
    .container { padding: 20px; }
    .header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px; }
    .btn-primary {
      padding: 10px 20px;
      background: #FFC107;
      color: #212121;
      text-decoration: none;
      border-radius: 5px;
      font-weight: bold;
    }
    .docs-grid {
      display: grid;
      gap: 20px;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    }
    .doc-card {
      background: rgba(255,255,255,0.1);
      padding: 20px;
      border-radius: 10px;
      backdrop-filter: blur(5px);
    }
    .actions { margin-top: 15px; display: flex; gap: 10px; }
    .btn-view, .btn-delete {
      padding: 5px 10px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 0.9rem;
    }
    .btn-view { background: #2196F3; color: white; }
    .btn-delete { background: #f44336; color: white; }
  </style>

  <script>
    document.querySelectorAll('.btn-delete').forEach(btn => {
      btn.addEventListener('click', async (e) => {
        const id = e.target.dataset.id;
        const url = e.target.dataset.url;
        if (confirm('¬øEliminar este documento?')) {
          // Primero eliminar del servidor
          const res = await fetch(`/api/admin/documentos?id=${id}`, {
            method: 'DELETE'
          });
          if (res.ok) {
            // Opcional: eliminar archivo f√≠sico (requiere endpoint adicional)
            location.reload();
          } else {
            alert('Error al eliminar');
          }
        }
      });
    });
  </script>
</Layout>