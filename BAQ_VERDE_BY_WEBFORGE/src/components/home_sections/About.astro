---
const text = 'El Observatorio Ambiental es una plataforma para el monitoreo, análisis y difusión de información ambiental. Nuestro objetivo es brindar datos confiables para la toma de decisiones y la concientización ciudadana.';
---

<section class="banner-about relative overflow-hidden opacity-0 animate-fadeInSection py-xxl min-h-[400px] bg-blanco">
  <div class="container flex items-center justify-center relative z-10 h-full p-md max-w-[1200px] mx-auto">
    <div class="content text-center text-verde-sec-dark text-md font-semibold max-w-[700px] p-lg opacity-0 transform translate-y-8 animate-slideUpText">
      <p class="m-0">{text}</p>
    </div>
  </div>

  <!-- SVGs decorativos -->
  <img src="/images/svg/tucan.svg" class="toucan" alt="Tucán" />
  <img src="/images/svg/leon.svg" class="chameleon" alt="Camaleón" />
  <img src="/images/svg/plantas.svg" class="leaves-left" alt="Hojas izquierda" />
  <img src="/images/svg/plantas_2.svg" class="leaves-right" alt="Hojas derecha" />
</section>

<style>
/* --- Animaciones --- */
@keyframes fadeInSection { to { opacity: 1; } }
@keyframes slideUpText { to { opacity: 1; transform: translateY(0); } }

/* Utilities para animaciones */
.animate-fadeInSection { animation: fadeInSection 0.8s ease-out forwards; }
.animate-slideUpText { animation: slideUpText 0.7s cubic-bezier(0.25,0.46,0.45,0.94) 0.3s forwards; }

/* Mantener los estilos de los SVGs intactos */
.banner-about img { position: absolute; z-index: 1; pointer-events: none; opacity: 0; }

.banner-about .toucan {
  top: 0; left: 5%; width: 300px; height: auto; transform: rotate(0deg) translateX(-50px);
  animation: slideInLeft 0.7s ease-out 0.5s forwards;
}
.banner-about .chameleon {
  top: 8%; right: 5%; width: 350px; height: auto; transform: rotate(-5deg) translateX(50px);
  animation: slideInRight 0.7s ease-out 0.6s forwards;
}
.banner-about .leaves-left {
  bottom: -1%; left: 5%; width: 300px; height: auto; transform: rotate(-3deg) translateY(50px);
  animation: slideInBottomLeft 0.7s ease-out 0.7s forwards;
}
.banner-about .leaves-right {
  bottom: -5%; right: 5%; width: 250px; height: auto; transform: rotate(3deg) translateY(50px);
  animation: slideInBottomRight 0.7s ease-out 0.8s forwards;
}

/* Keyframes SVG */
@keyframes slideInLeft { to { opacity: 1; transform: rotate(0deg) translateX(0); } }
@keyframes slideInRight { to { opacity: 1; transform: rotate(-5deg) translateX(0); } }
@keyframes slideInBottomLeft { to { opacity: 1; transform: rotate(-3deg) translateY(0); } }
@keyframes slideInBottomRight { to { opacity: 1; transform: rotate(3deg) translateY(0); } }

/* --- Responsive (solo tamaños, sin tocar animaciones) --- */
@media (max-width: 1024px) {
  .banner-about .toucan { width: 130px; top: 8%; left: 3%; }
  .banner-about .chameleon { width: 140px; top: 6%; right: 3%; }
  .banner-about .leaves-left { width: 100px; bottom: 6%; left: 2%; }
  .banner-about .leaves-right { width: 110px; bottom: 4%; right: 2%; }
}

@media (max-width: 768px) {
  .banner-about { py: 3rem; min-height: 300px; }
  .banner-about .content { font-size: 1.1rem; max-width: 90%; p: 1.5rem 1rem; }
  .banner-about .toucan { width: 100px; top: 5%; left: 2%; }
  .banner-about .chameleon { width: 110px; top: 3%; right: 2%; }
  .banner-about .leaves-left { width: 80px; bottom: 4%; left: 1%; }
  .banner-about .leaves-right { width: 90px; bottom: 2%; right: 1%; }
}

@media (max-width: 480px) {
  .banner-about { py: 2rem; min-height: 250px; }
  .banner-about .content { font-size: 1rem; p: 1rem; }
  .banner-about .leaves-left, .banner-about .leaves-right { opacity: 0.6; }
}
</style>
