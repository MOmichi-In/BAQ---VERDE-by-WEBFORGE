---
const text =
    "El Observatorio Ambiental es una plataforma para el monitoreo, análisis y difusión de información ambiental. Nuestro objetivo es brindar datos confiables para la toma de decisiones y la concientización ciudadana.";
---

<section class="banner-about">
    <div class="container">
        <div class="content">
            <p>{text}</p>
        </div>
    </div>

    <!-- SVGs decorativos -->
    <img src="/images/svg/tucan.svg" class="toucan svg-decorativo" alt="Tucán" />
    <img src="/images/svg/leon.svg" class="chameleon svg-decorativo" alt="Camaleón" />
    <img src="/images/svg/plantas.svg" class="leaves-left svg-decorativo" alt="Hojas izquierda" />
    <img src="/images/svg/plantas_2.svg" class="leaves-right svg-decorativo" alt="Hojas derecha" />
</section>

<style>
    /* --- Contenedor principal --- */
    .banner-about {
        position: relative;
        padding: 6rem 2rem;
        background-color: #ffffff;
        min-height: 400px;
        overflow: hidden;
        opacity: 0;
        animation: fadeInSection 0.8s ease-out forwards;
    }

    @keyframes fadeInSection {
        to {
            opacity: 1;
        }
    }

    /* --- Contenedor interno --- */
    .banner-about .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        z-index: 10;
        height: 100%;
    }

    /* --- Estilo del texto --- */
    .banner-about .content {
        text-align: center;
        color: #2e7d32;
        font-size: 1.25rem;
        line-height: 1.8;
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
        z-index: 2;
        font-weight: 500;
        opacity: 0;
        transform: translateY(30px);
        animation: slideUpText 0.7s cubic-bezier(0.25, 0.46, 0.45, 0.94) 0.3s forwards;
    }

    @keyframes slideUpText {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .banner-about p {
        margin: 0;
        font-weight: 500;
    }

    /* --- Imágenes decorativas --- */
    .banner-about img {
        position: absolute;
        z-index: 1;
        pointer-events: none;
        opacity: 0;
    }

    /* TUCÁN - Superior izquierda */
    .banner-about .toucan {
        top: 25%;
        left: 5%;
        width: 18vw;
        height: auto;
        transform: rotate(0deg) translateX(-5vw);
        animation: slideInLeft 0.7s ease-out 0.5s forwards;
    }

    /* CAMALEÓN - Superior derecha */
    .banner-about .chameleon {
        top: 35%;
        right: 5%;
        width: 20vw;
        height: auto;
        transform: rotate(-5deg) translateX(5vw);
        animation: slideInRight 0.7s ease-out 0.6s forwards;
    }

    /* HOJAS IZQUIERDA - Inferior izquierda */
    .banner-about .leaves-left {
        bottom: -1%;
        left: 10%;
        width: 12vw;
        height: auto;
        transform: rotate(-3deg) translateY(5vh);
        animation: slideInBottomLeft 0.7s ease-out 0.7s forwards;
    }

    /* HOJAS DERECHA - Inferior derecha */
    .banner-about .leaves-right {
        bottom: -10%;
        right: 5%;
        width: 14vw;
        height: auto;
        transform: rotate(3deg) translateY(5vh);
        animation: slideInBottomRight 0.7s ease-out 0.8s forwards;
    }

    /* --- Animaciones clave --- */
    @keyframes slideInLeft {
        to {
            opacity: 1;
            transform: rotate(0deg) translateX(0);
        }
    }

    @keyframes slideInRight {
        to {
            opacity: 1;
            transform: rotate(-5deg) translateX(0);
        }
    }

    @keyframes slideInBottomLeft {
        to {
            opacity: 1;
            transform: rotate(-3deg) translateY(0);
        }
    }

    @keyframes slideInBottomRight {
        to {
            opacity: 1;
            transform: rotate(3deg) translateY(0);
        }
    }

    /* --- Responsive Design --- */

    /* Tablets grandes (1200px) */
    @media (max-width: 1200px) {
        .banner-about {
            padding: 5rem 2rem;
        }
    }

    /* Tablets (1024px) */
    @media (max-width: 1100px) {
        .banner-about {
            padding: 4rem 2rem;
        }

        .banner-about .content {
            font-size: 1.15rem;
            padding: 1.75rem;
        }


        .banner-about .toucan {
            width: 16vw; 
            top: 35%; 
            left: 4%; /
            transform: rotate(0deg) translateX(-4vw);
        }

        .banner-about .chameleon {
            width: 18vw;
            top: 50%;
            right: 4%; 
            transform: rotate(-5deg) translateX(4vw); 
        }

        .banner-about .leaves-left {
            width: 11vw; /* ← escala hojas */
            bottom: -2%; /* ← levanta del fondo */
            left: 8%; /* ← ajusta posición horizontal */
            transform: rotate(-3deg) translateY(4vh); /* ← suaviza entrada */
        }

        .banner-about .leaves-right {
            width: 13vw; 
            bottom: -5%; 
            right: 4%; 
            transform: rotate(3deg) translateY(4vh); 
        }
    }
    /* OCULTAR  */
    @media (max-width: 1000px) {
        .banner-about .toucan,
        .banner-about .chameleon,
        .banner-about .leaves-left,
        .banner-about .leaves-right {
            display: none !important;
        }

        .banner-about {
            padding: 4rem 1.5rem;
        }

        .banner-about .content {
            font-size: 1.125rem;
            max-width: 100%;
        }
    }

    /* Tablets pequeñas (768px) */
    @media (max-width: 768px) {
        .banner-about {
            padding: 3rem 1.5rem;
            min-height: 300px;
        }

        .banner-about .content {
            font-size: 1.0625rem;
            line-height: 1.7;
            padding: 1.5rem;
        }
    }

    /* Móviles (480px) */
    @media (max-width: 480px) {
        .banner-about {
            padding: 2.5rem 1rem;
            min-height: 280px;
        }

        .banner-about .content {
            font-size: 1rem;
            line-height: 1.6;
            padding: 1.25rem;
        }
    }

    /* Móviles pequeños (360px) */
    @media (max-width: 360px) {
        .banner-about {
            padding: 2rem 0.75rem;
            min-height: 260px;
        }

        .banner-about .content {
            font-size: 0.9375rem;
            padding: 1rem;
        }
    }
</style>
